{
  "name": "volunteer_step_events",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "predev": "pnpm db:generate",
    "dev": "next dev --turbopack",
    "prebuild": "pnpm db:generate",
    "build": "next build --turbopack",
    "start": "next start",
    "db:generate": "dotenv -e .env.local -- prisma generate",
    "db:migrate": "dotenv -e .env.local -- prisma migrate dev",
    "db:push": "dotenv -e .env.local -- prisma db push",
    "db:studio": "dotenv -e .env.local -- prisma studio",
    "db:seed": "pnpm db:generate && npx tsx src/database/seed.ts && npx tsx src/database/seed-local.ts",
    "postinstall": "node -e \"if(process.env.NODE_ENV==='production'){require('child_process').execSync('prisma migrate deploy',{stdio:'inherit'})}\""
  },
  "dependencies": {
    "@auth/neon-adapter": "^1.10.0",
    "@hookform/resolvers": "^5.2.1",
    "@imagekit/next": "^2.1.2",
    "@neondatabase/serverless": "^1.0.1",
    "@prisma/client": "^6.14.0",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@upstash/qstash": "^2.8.2",
    "@upstash/ratelimit": "^2.0.6",
    "@upstash/redis": "^1.35.3",
    "@upstash/workflow": "^0.2.17",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "imagekit": "^6.0.0",
    "lucide-react": "^0.541.0",
    "next": "15.5.0",
    "next-auth": "^4.24.11",
    "next-themes": "^0.4.6",
    "react": "19.1.0",
    "react-colorful": "^5.6.1",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.62.0",
    "react-icons": "^5.5.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/bcryptjs": "^3.0.0",
    "@types/imagekit": "^3.2.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "dotenv-cli": "^10.0.0",
    "prisma": "^6.14.0",
    "tailwindcss": "^4",
    "tsx": "^4.20.5",
    "tw-animate-css": "^1.3.7",
    "typescript": "^5"
  }
}
